                    android:id="@+id/reg_sms"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:background="#717171"
                    android:textColor="#f7ab3c"
                    android:hint="请输入验证码"
