                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@drawable/zc_icon_zfmm" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认支付密码"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:textSize="@dimen/sp_14" />
                <EditText
                    android:id="@+id/reg_sure_pay_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_130"
                    android:background="#717171"
                    android:hint="请确认支付密码"
                    android:lines="1"
                    android:textColor="#f7ab3c"
                    android:inputType="numberPassword"
                    android:digits="1234567890"
                    android:textSize="@dimen/sp_14"
                    android:textColorHint="#f7ab3c" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#717171"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@drawable/zc_icon_yzm" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:textSize="@dimen/sp_14" />
