<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_lu"
        layout="@layout/page_top" />
    <RelativeLayout
        android:id="@+id/setting_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <EditText
            android:id="@+id/updatepwd_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_alignParentLeft="true"
            android:inputType="phone"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:background="@null"
            android:layout_margin="@dimen/sp_15"
            />

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout
        android:id="@+id/mymsg_name_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <EditText
            android:id="@+id/updatepwd_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:layout_alignParentLeft="true"
            android:inputType="phone"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:background="@null"
            android:layout_margin="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/update_get_code"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_27"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout
        android:id="@+id/mymsg_zh_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <EditText
            android:id="@+id/updatepwd_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:layout_alignParentLeft="true"
            android:inputType="phone"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:background="@null"
            android:layout_margin="@dimen/sp_15"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <EditText
            android:id="@+id/updatepwd_new_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认新密码"
            android:layout_alignParentLeft="true"
            android:inputType="phone"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:background="@null"
            android:layout_margin="@dimen/sp_15"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <TextView
        android:id="@+id/login_btn_login"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_270"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />
</LinearLayout>