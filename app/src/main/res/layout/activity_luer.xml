<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_lu"
        layout="@layout/page_top" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_144"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/luer_huoqu"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="#000000"
                android:text="您的当前鹿耳"
                />
            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:src="@drawable/weifen_wenti"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_2"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/luer_count"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_13"
            android:textColor="#fc3c15"
            android:text="0"
            />
        <TextView
            android:id="@+id/lu_chongzhi_btn"
            android:layout_width="@dimen/dp_143"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_23"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="立即充值"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#f5f5f5"
        />
    <TextView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_13"
        android:textColor="#000000"
        android:text="交易记录"
        />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/samrt_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/luer_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>