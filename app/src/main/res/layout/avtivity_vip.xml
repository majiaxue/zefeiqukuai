                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_150"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="@dimen/dp_53"
                            android:layout_marginLeft="@dimen/dp_61"
                            android:layout_marginTop="@dimen/dp_35"
                            android:background="@drawable/huiyuan_baifenbi" />

                        <TextView
                            android:id="@+id/vip_he_shouyi"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收益立即到账"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#333333"

                            />
                        <TextView
                            android:id="@+id/vip_he_dai"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推广收益"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#999999"

                            />
                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:id="@+id/vip_he_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:text="直推人数100人、二级人数100人、团队总人数100人"
                        android:layout_alignParentBottom="true"
                        android:textColor="#976122"
                        android:textSize="10sp"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注：直充金额指一次性最高充值金额"
                    android:layout_alignParentBottom="true"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_centerInParent="true"
                    />

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>