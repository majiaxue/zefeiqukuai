<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <LinearLayout
            android:id="@+id/chonghzi_type_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账号："
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/zhifubao_zh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入支付宝账号"
                android:layout_marginLeft="@dimen/dp_30"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f3f3f3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chongzhi_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝昵称："
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/zhifubao_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入支付宝昵称"
                android:layout_marginLeft="@dimen/dp_30"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f3f3f3" />
    </LinearLayout>
    <TextView
       android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="收款码"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />
    <ImageView
        android:id="@+id/zhifubao_shoukuanma_img"
        android:layout_width="@dimen/dp_89"
        android:layout_height="@dimen/dp_89"
        android:src="@drawable/shoukuan_shangchuan"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        />

</LinearLayout>