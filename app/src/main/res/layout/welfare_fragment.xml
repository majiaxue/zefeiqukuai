<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_lu"
        layout="@layout/page_top" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_qitabeijing"
        >
        <ImageView
            android:id="@+id/service_dazhuanpan"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/fuli_1"
            android:layout_marginTop="@dimen/dp_30"
            />
        <ImageView
            android:id="@+id/service_tuguan"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/fuli_2"
            android:layout_marginTop="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/service_fulizhuanxiang"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/fuli_3"
            android:layout_marginTop="@dimen/dp_15"
            />




    </LinearLayout>

</LinearLayout>