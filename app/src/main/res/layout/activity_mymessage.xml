<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_lu"
        layout="@layout/page_top" />
    <RelativeLayout
        android:id="@+id/setting_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_margin="@dimen/sp_15"
            />
        <ImageView
            android:id="@+id/mymsg_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_wode1"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_7"
            />
        <ImageView
            android:id="@+id/mine_setting"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@drawable/gerenixnxi_gengduo"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_margin="@dimen/dp_15"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout
        android:id="@+id/mymsg_name_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_margin="@dimen/sp_15"
            />
        <EditText
            android:id="@+id/mymsg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="少说多做"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:background="@null"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            />
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@drawable/gerenixnxi_gengduo"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"

            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout
        android:id="@+id/mymsg_zh_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_margin="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/mymsg_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="345678"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#f5f5f5"
        />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐人"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_margin="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/mymsg_tuijian_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="狠"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            />

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:text="推荐人昵称"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_margin="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/mymsg_tuijian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="少说多做"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            />

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"
        />
    <RelativeLayout
      
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐人账号"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_margin="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/mymsg_tuijian_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="345678"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            />

    </RelativeLayout>
</LinearLayout>