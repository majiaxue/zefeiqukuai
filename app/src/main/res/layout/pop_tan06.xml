<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400">

        <ImageView
            android:id="@+id/pop_jiang"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_360"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/zhongjiangla2" />

        <TextView
            android:id="@+id/zhongjiang_content"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_220"
            android:gravity="center"
            android:text="122333343444"
            android:textColor="#e46b00"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/pop_cancel"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_below="@+id/pop_jiang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/guanbi" />
</LinearLayout>