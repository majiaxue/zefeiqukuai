<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_choujiangguize"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/dp_263"
        android:layout_height="@dimen/dp_174">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抽奖规则"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_19"
            android:textStyle="bold"
            android:textColor="#975b2f"/>
        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="@drawable/bg_20_97"
            android:text="活动玩法"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/pop_zhuanpan_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_13"
            android:text="一.平台用户点击充值,获取抽奖次数;"
            android:textColor="#000000"
            android:textSize="@dimen/sp_11" />
        <TextView
            android:id="@+id/pop_zhuanpan_content4"
            android:textSize="@dimen/sp_11"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="非平台用户注册后,方可充值抽奖次数"/>
        <TextView
            android:id="@+id/pop_zhuanpan_content2"
            android:textSize="@dimen/sp_11"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="二.每抽折扣一次需扣除一定数量的动态收益"/>
        <TextView
            android:id="@+id/pop_zhuanpan_content3"
            android:textSize="@dimen/sp_11"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="三.每天可抽一次"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/zhuanpan_close"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@drawable/guanbi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        />

</RelativeLayout>