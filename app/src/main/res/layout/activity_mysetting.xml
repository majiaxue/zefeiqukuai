<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_lu"
        layout="@layout/page_top" />

    <RelativeLayout
        android:id="@+id/setting_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/sp_15"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/mine_setting"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/gerenixnxi_gengduo" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/sp_15"
            android:gravity="center"
            android:text="背景音乐"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/setting_music"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/shezhi_guanbi" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/setting_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/sp_15"
            android:gravity="center"
            android:text="版本号"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/setting_huancun_version"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/sp_20"
            android:gravity="center"
            android:text="3.13M"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/gerenixnxi_gengduo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/setting_qingchu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/sp_15"
            android:gravity="center"
            android:text="清除缓存"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/setting_huancun_text"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/sp_20"
            android:gravity="center"
            android:text="3.13M"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/gerenixnxi_gengduo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#f5f5f5" />

    <TextView
        android:id="@+id/setting_btn_logout"
        android:layout_width="@dimen/dp_301"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_270"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />
</LinearLayout>