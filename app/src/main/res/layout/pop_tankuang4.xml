<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_260"
    android:layout_height="@dimen/dp_220"
    android:background="@drawable/free_dialog_bg"
    android:gravity="center"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="提示"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:background="@drawable/guanbi"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_2"
        android:background="#eeeeee"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:inputType="number"
        android:digits="1234567890"
        android:id="@+id/tan_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_22"
        android:background="@null"
        android:gravity="center_vertical"
        android:textColor="#666666"
        android:textColorHint="#80999999"
        android:textSize="@dimen/sp_14" />
    <View
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="@dimen/dp_10"
            android:inputType="number"
            android:digits="1234567890"
            android:id="@+id/tan_que_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textColor="#666666"
            android:textColorHint="#80999999"
            android:layout_marginBottom="@dimen/dp_29"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/register_get_code3"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_get_code"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffaa24"
            android:textSize="@dimen/sp_11" />
        <View
            android:layout_below="@id/register_get_code3"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:background="#eeeeee"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#000000" />

        <View
            android:visibility="gone"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_40"
            android:background="#eeeeee" />

        <TextView
            android:background="@drawable/bg_20_e6"
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>