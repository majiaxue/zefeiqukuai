<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_202"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/bg_chongwu"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/content_gong1_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_5"
        android:src="@drawable/denglu_logo" />

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_gong1_name"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梦幻鹿"
            android:textStyle="bold"
            android:textColor="#f7ac3c"
            android:textSize="16sp"
            android:gravity="left"
            />
        <LinearLayout
            android:id="@+id/bh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号:"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/content_gong_bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价值:"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/content_gong_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领养时间:"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/content_gong_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约/即抢领养饲料:"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/content_gong_qiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/10"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能合约收益:"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/content_gong_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可挖WIA:"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/content_gong_hkt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0枚"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/content_gong1_btn"
            android:layout_width="@dimen/dp_148"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</LinearLayout>