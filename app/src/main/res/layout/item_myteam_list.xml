<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:elevation="@dimen/dp_10"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/team_img"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_57"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_13"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team_name"
                android:text="ID:177****1878"
                android:textColor="#e6a81e"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@id/team_img"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team_time"
                android:text="时间：2019：12"
                android:textColor="#666666"
                android:layout_below="@id/team_name"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@id/team_img"/>
            <TextView
                android:id="@+id/team_dj"
                android:gravity="center"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_20"
                android:text="普通会员"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/bg_20_e6"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
